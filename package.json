  },
  "description": "Client application, which is an administrative panel for managing a platform-based system @k-platform",
  "keywords": [
    "admin panel",
    "platform management",
    "customizable application",
    "extensible application",
    "angular",
    "frontend",
    "admin interface",
    "system administration",
    "admin UI"
  ],
  "scripts": {
    "ng": "ng",
    "build:lib": "ng build k-platform-client --configuration production",
    "publish": "cd dist/lib && npm publish",
    "start:example:admin": "ng serve k-platform-admin",
    "build:example:admin": "ng build k-platform-admin",
    "lint": "eslint --fix --ext .js,.ts,.html .",
    "docs:build": "npx compodoc -c compodoc.json",
    "docs:serve": "npx compodoc -c compodoc.json -s -w",
    "analyze:example:admin": "ng build k-platform-admin --configuration development --stats-json && webpack-bundle-analyzer dist/examples/admin/stats.json"
  },
